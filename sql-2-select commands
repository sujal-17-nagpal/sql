USE ORG;
SELECT * FROM bonus;
SELECT 44+11;
SELECT now(); -- TO GET CURRENT TIME
SELECT lcase('MYSTERY');
SELECT * FROM worker WHERE SALARY > 50000;
SELECT * FROM worker WHERE SALARY BETWEEN 50000 AND 1000000;
SELECT * FROM worker WHERE DEPARTMENT IN ('HR','ADMIN');  -- USED TO AVOID MULTIPLE OR'S
SELECT * FROM worker WHERE DEPARTMENT NOT IN ('HR','ADMIN');
SELECT * FROM worker WHERE DEPARTMENT IS NULL;

--    % -> ANY NO OF CHARACTERS
SELECT * FROM worker WHERE first_name LIKE '%I%';

--    _ -> ONLY ONE CHARACTER
SELECT * FROM worker WHERE first_name LIKE '_I%';

SELECT * FROM worker order by salary;
SELECT * FROM worker order by salary DESC;

SELECT DISTINCT DEPARTMENT FROM WORKER;

SELECT DEPARTMENT , COUNT(DEPARTMENT) from worker
group by DEPARTMENT;

SELECT DEPARTMENT , AVG(SALARY) from worker
group by DEPARTMENT;

SELECT DEPARTMENT , MIN(SALARY) from worker
group by DEPARTMENT;

SELECT DEPARTMENT,COUNT(DEPARTMENT) FROM worker group by DEPARTMENT HAVING COUNT(DEPARTMENT)>2;
