(006, 'Lead',           '2016-06-11 00:00:00'),
(003, 'Lead',           '2016-06-11 00:00:00');

CREATE TABLE bonus(
	WORKER_REF_ID INT,
    BONUS_AMOUNT INT,
    BONUS_DATE DATETIME,
    FOREIGN KEY (WORKER_REF_ID)
    REFERENCES WORKER(WORKER_ID)
);

