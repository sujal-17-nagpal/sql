SELECT * FROM worker;

CREATE TABLE title(
	WORKER_REF_ID INT,
    WORKER_TITLE VARCHAR(25),
    AFFECTED_FROM DATETIME,
    FOREIGN KEY (WORKER_REF_ID) 
		REFERENCES WORKER(WORKER_ID)
);

INSERT INTO Title
(WORKER_REF_ID, WORKER_TITLE, AFFECTED_FROM)
VALUES
(001, 'Manager','2016-02-20 00:00:00'),
